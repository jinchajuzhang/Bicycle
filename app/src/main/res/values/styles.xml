<resources>
<!--                                          主题                                               -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--无actionbar 全屏主题-->
    <style name="MyAppTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--底部弹出对话框的主题-->
    <style name="BottomPopDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/White</item>
    </style>

<!--                                          动画风格                                               -->
    <!--spalshdialog退出动画风格-->
    <style name="DialogAnimationExitLeft">
        <item name="android:windowExitAnimation">@anim/dialog_exit_left</item>
    </style>
    <!--waitingdialog动画风格-->
    <style name="WaitingDialogAnimation">
        <item name="android:windowExitAnimation">@anim/dialog_exit_alpha</item>
    </style>
<!--                                          属性提取                                              -->
    <!--radiobutton属性提取-->
    <style name="RadioButtonDrawableTop">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">11sp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:background">@drawable/selector_radiobutton_bg</item>
        <item name="android:textColor">@drawable/selector_radiobutton_text</item>
    </style>
    <!--EditText属性提取-->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textColorHint">#CDCDCD</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/selector_login_edittext_bg</item>
    </style>
    <!--MyItemView属性提取-->
    <style name="MyItemViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--MyUserMessageItem属性提取-->
    <style name="UserMessageItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_my_useritem</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>



    <style name="CommTextStyle">                            <!--不含背景的文本字体格式-->
        <item name="android:textSize">16sp</item>
        <item name="android:textScaleX">1.2</item>
        <item name="android:textColor">@color/CommBkColorPress</item>
        <item name="android:textColorHint">@color/CommBkColorPress</item>
    </style>

    <style name="BkTextStyle">                            <!--含有背景的文本字体格式-->
        <item name="android:textSize">16sp</item>
        <item name="android:textScaleX">1.2</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="style_popwin_anim">                        <!--弹窗的动画定义-->
        <item name="android:windowEnterAnimation">@anim/translate_enter</item>
        <item name="android:windowExitAnimation">@anim/translate_exit</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



</resources>
