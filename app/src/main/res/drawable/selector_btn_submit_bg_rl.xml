<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#FF7701" android:endColor="#FE4900" />
            <corners android:bottomLeftRadius="15dp" android:topLeftRadius="15dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#CC7701" android:endColor="#AA4400" />
            <corners android:bottomLeftRadius="15dp" android:topLeftRadius="15dp"/>
        </shape>
    </item>
</selector>